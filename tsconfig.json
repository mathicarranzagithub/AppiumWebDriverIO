{
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
      },
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/globals/types"
        ]
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
    ]

    
}